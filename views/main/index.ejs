<span class="mobile btn-mobile-menu">
        <i class="icon icon-list btn-mobile-menu__icon"></i>
        <i class="icon icon-x-circle btn-mobile-close__icon hidden"></i>
    </span>

<header class="panel-cover ">
    <div class="panel-main">

        <div class="panel-main__inner panel-inverted">
            <div class="panel-main__content">


                <a href="/" title="link to homepage for <%= config.bloggerName %>">
                    <img src="<%= config.avatar %>" width="80" alt="<%= config.bloggerName %> logo" class="panel-cover__logo logo"/>
                </a>

                <h1 class="panel-cover__title panel-title">
                    <a href="/" title="link to homepage for <%= config.bloggerName %>">
                        <%= config.bloggerName %>
                    </a>
                </h1>
                <span class="panel-cover__subtitle panel-subtitle">
                    <%= config.subTitle %>
                </span>
                <hr class="panel-cover__divider"/>
                <p class="panel-cover__description"><%= config.biography %></p>
                <hr class="panel-cover__divider panel-cover__divider--secondary"/>

                <div class="navigation-wrapper">

                    <nav class="cover-navigation cover-navigation--primary">
                        <ul class="navigation">
                            <li class="navigation__item"><a href="#blog"
                                                            title="link to Dale-Anthony blog"
                                                            class="blog-button">Blog</a>
                            </li>
                        </ul>
                    </nav>


                    <nav class="cover-navigation navigation--social">
                        <ul class="navigation">


                            <!-- Twitter -->
                            <li class="navigation__item">
                                <a href="<%= config.twitter %>" target="_blank"
                                   title="<%= config.bloggerName %> on Twitter">
                                    <i class='icon icon-social-twitter'></i>
                                    <span class="label">Twitter</span>
                                </a>
                            </li>

                            <!-- Facebook -->
                            <li class="navigation__item">
                                <a href="<%= config.facebook %>" target="_blank"
                                   title="<%= config.bloggerName %> on Facebook">
                                    <i class='icon icon-social-facebook'></i>
                                    <span class="label">Facebook</span>
                                </a>
                            </li>

                            <!-- Github -->
                            <li class="navigation__item">
                                <a href="<%= config.github %>" target="_blank"
                                   title="<%= config.bloggerName %> on Github">
                                    <i class='icon icon-social-github'></i>
                                    <span class="label">Github</span>
                                </a>
                            </li>

                            <!-- Email -->
                            <li class="navigation__item">
                                <a href="mailto:<%= config.email %>"
                                   title="Email <%= config.email %>">
                                    <i class='icon icon-mail'></i>
                                    <span class="label">Email</span>
                                </a>
                            </li>

                        </ul>
                    </nav>

                </div>

            </div>

        </div>

        <div class="panel-cover--overlay cover-green"></div>
    </div>
</header>


<div class="content-wrapper">
    <div class="content-wrapper__inner">


        <div class="main-post-list">
            <ol class="post-list">
                <% _.each(blogs, function (blog) { %>
                <li>
                    <h2 class="post-list__post-title post-title"><a
                            href="/post/<%= blog.slug %>/<%= blog.id %>/"
                            title="<%= blog.name %>"><%= blog.title %></a></h2>
                    <p class="excerpt"><%= blog.summary %></p>
                    <div class="post-list__meta">
                        <time datetime="05 Jun 2014"
                              class="post-list__meta--date date"><%= blog.createdAt %>
                        </time>
                         â€¢
                        <%= blog.username %>
                    </div>
                    <hr class="post-list__divider"/>
                </li>
                <% }) %>
            </ol>
        </div>

        <footer class="footer">
            <span class="footer__copyright">&copy;
                2014. All rights reserved.</span>
                theme</a> by <a href="http://daleanthony.com"
                                title="link to website for Dale-Anthony">Dale-Anthony</a></span>
        </footer>
    </div>
</div>